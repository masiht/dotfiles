[user]
    name = Trent Nadeau
    email = tanadeau@gmail.com

[alias]
    st = status
    ci = commit
    co = checkout
    fu = reset --hard
    sb = shortlog -s -n
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    yep = !git pull --rebase && git remote prune origin
    standup = !git lg --since='yesterday' --author=`git config user.email`
    su = !git standup
    in = !git log `git rev-parse --abbrev-ref HEAD`..`git rev-parse --symbolic-full-name @{u}`
    incoming = !git in
    out = !git log `git rev-parse --symbolic-full-name @{u}`..`git rev-parse --abbrev-ref HEAD`
    outgoing = !git out
    unstage = reset HEAD --
    last = log -1 HEAD

[core]
    editor = vim

[color]
    ui = always

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[github]
    user = tanadeau

[grep]
    patternType = perl

[merge]
    conflictstyle = diff3

[pull]
    rebase = true

[push]
    default = simple
